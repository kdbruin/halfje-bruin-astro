---
import { Image } from 'astro:assets'

const { image } = Astro.props
---

{
    image && (
        <Image
            class="featured-image"
            src={image.src}
            alt={image.title}
            widths={[896]}
            sizes={`896px`}
            format={"webp"}
            quality="mid"
            loading="eager"
        />
        <br />
    )
}

<style>
    .featured-image {
        @apply relative rounded-lg shadow-xl overflow-hidden;
    }
</style>
