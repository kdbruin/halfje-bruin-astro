---
import FormattedDate from "../components/FormattedDate.astro";
import BaseLayout from "./BaseLayout.astro";

const { metadata } = Astro.props;
---

<BaseLayout pageTitle={metadata.title}>
  <p><em>{metadata.description}</em></p>
  <FormattedDate date={metadata.pubDate}/>

  <p>Written by: {metadata.author}</p>

  <img src={metadata.image.url} width="300" alt={metadata.image.alt} />

  <div class="tags">
    {
      metadata.tags.map((tag) => (
        <p class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>

  <slot />
</BaseLayout>
<style>
  a {
    color: #00539f;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>
