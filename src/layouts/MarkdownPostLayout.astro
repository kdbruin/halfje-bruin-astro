---
import { getEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import BaseLayout from "./BaseLayout.astro";

const { metadata } = Astro.props;
const series = metadata.series ? await getEntry(metadata.series) : undefined;
---

<BaseLayout pageTitle={metadata.title}>
  <p><em>{metadata.description}</em></p>
  <FormattedDate date={metadata.pubDate}/>

  <p>Written by: {metadata.author}</p>

  {
    series && <p>Part of series: {series.data.title}</p>
  }

  <img src={metadata.image.url} width="300" alt={metadata.image.alt} />

  <div class="tags">
    {
      metadata.tags.map((tag) => (
        <p class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>

  <slot />
</BaseLayout>
