---
import { getCollection } from "astro:content";
import MarkdownSeriesLayout from "../../layouts/MarkdownSeriesLayout.astro";

export async function getStaticPaths() {
  const blogEntries = await getCollection("series");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<MarkdownSeriesLayout series={entry} metadata={entry.data}>
  <Content />
</MarkdownSeriesLayout>
