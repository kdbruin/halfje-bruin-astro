---
//
// Tags index
//

import { getCollection } from 'astro:content'
import DefaultPageLayout from '../../layouts/default.astro'
import { getTags, splitTagsByLetter } from '../../utils'
import TagList from '../../components/TagList.astro'

const title = 'Alle Tags'
const description = 'Overicht van alle gebruikte tags.'

const allPosts = await getCollection('blog')
const allTags = getTags(allPosts)
const allTagsByLetter = splitTagsByLetter(allTags)
---

<DefaultPageLayout content={{ title, description }}>
        {
            Array.from(allTagsByLetter.keys()).sort().map((firstLetter) => (
                <TagList firstLetter={firstLetter} tags={allTagsByLetter.get(firstLetter)} />
            ))
        }
</DefaultPageLayout>

<style>
    .tag-list {
        @apply list-none flex gap-2 flex-wrap;
    }
    .tag {
        @apply inline-block text-xl px-4 py-1 rounded-full text-theme-primary bg-theme-dark-primary dark:bg-theme-primary dark:text-theme-dark-primary hover:bg-theme-primary hover:text-theme-dark-primary dark:hover:bg-theme-dark-primary dark:hover:text-theme-primary;
    }
</style>
